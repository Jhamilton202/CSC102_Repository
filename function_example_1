/* Code example of a simple JavaScript function by John Hamilon
   The code uses a button, when clicked the function is run 
*/
         
           function firstFunction() 
            {
                var x = 5;
                var y = 11;
                var Total = x + y;
                
                document.getElementById("checkFunction").innerHTML = "This is the total of x=5 and y=11 is a value of   " + Total;

              //  alert(Total);  
            }
           
    </script>

</head>
